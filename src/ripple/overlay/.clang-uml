        - ripple::Handshake
        - ripple::Message
        - ripple::Overlay
        - ripple::OverlayImpl
        - ripple::Peer
        - ripple::PeerImp
        - ripple::PeerReservationTable
        - ripple::PeerSet
        - ripple::ProtocolMessage
        - ripple::ProtocolVersion
        - ripple::ReduceRelayCommon
        - ripple::Slot
        - ripple::Squelch
        - ripple::TrafficCount
        - ripple::Tuning
        - ripple::TxMetrics
        - ripple::ZeroCopyStream
    exclude:
      namespaces:
        - ripple::test
        - ripple::detail
        - metrics
        - ripple::metrics
